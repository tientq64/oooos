.OS
   height: 100%
   display: flex
   flex-direction: column

.OS-tasks
   position: relative
   flex: 1

.OS-taskbar
   padding: 4px 8px
   border-top: 1px solid $gray2
   display: flex
   align-items: center
   gap: 8px
   white-space: nowrap
   background: #fff
   z-index: 1

.OS-taskbarTasks
   display: flex
   flex: 1
   justify-content: center
   align-items: center
   gap: 4px

.OS-taskbarTask
   max-width: 200px
   flex: 1

.OS-taskbarTrays
   display: flex
   align-items: center
   gap: 4px

.OS-menuPopper
   width: max-content
   border-radius: 6px
   background: #fff
   box-shadow: 0 0 0 1px $gray2, $shadow

.OS-submenuMenu
   z-index: 1040

.OS-contextMenu
   z-index: 1080

.Task
   position: absolute
   border-radius: 8px
   display: flex
   flex-direction: column
   background: #fff
   box-shadow: 0 0 0 1px $gray2, $shadow

.Task--minimized
   display: none

.Task--maximized
   left: 0 !important
   top: 0 !important
   width: 100% !important
   height: 100% !important
   border-radius: 0

   > .Task-body
      margin: 4px 0 0

      > .Task-frame
         border-radius: 0

.Task--fullscreen
   position: fixed
   left: 0 !important
   top: 0 !important
   width: 100% !important
   height: 100% !important
   border-radius: 0

   > .Task-body
      margin: 0

      > .Task-frame
         border-radius: 0

.Task--noHeader
   > .Task-header
      height: 0
      margin: 0
      overflow: hidden

.Task-header
   height: 24px
   margin: 4px 4px 0
   display: flex
   align-items: stretch

.Task-title
   padding: 0 8px
   display: flex
   flex: 1
   justify-content: center
   align-items: center

.Task-body
   position: relative
   margin: 4px
   flex: 1

.Task-frame
   position: absolute
   width: 100%
   height: 100%
   max-height: 100%
   border: 0
   border-radius: 6px
   overflow: hidden
